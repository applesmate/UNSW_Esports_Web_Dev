{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "ignoreDeprecations": "5.0",
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "module": "commonjs",
        "allowImportingTsExtensions": true,
    },
    "exclude": [
        "**/**_broken.ts"
    ]
}